<h4>配送先登録/一覧</h4>
<%= form_with(model: @address, :url => {:controller => "public/addresses"}, local: true) do |f| %>
  <table>
    <tbody>
      <tr>
        <th>郵便番号</th>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <th>宛名</th>
        <td><%= f.text_field :name %></td>
      </tr>
    </tbody>
  </table>
  <%= f.submit "登録する" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td><%= link_to "編集する", edit_public_address_path(address.id) %><%= link_to "削除する", public_address_path(address.id), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>