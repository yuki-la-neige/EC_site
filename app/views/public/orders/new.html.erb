<h4>購入情報入力</h4>
<%= form_with(model: @order, :url => {:controller => "public/orders"}, locate: true) do |f| %>
  <h5>支払方法</h5>
    <%= f.radio_button :payment_method, :card %>クレジットカード<br>
    <%= f.radio_button :payment_method, :bank %>銀行振込

  <h5>お届け先</h5>
    <%= radio_button_tag(:select, "myaddress",checked: true) %>ご自身の住所<br>
    <%= @user.postal_code + @user.address %><br>
    <%= @user.family_name + @user.first_name %><br>

    <%= radio_button_tag :select, checked: true %>登録済住所から選択
    <%= f.select :delivery_address, @user.address %><br>
    
    <%= radio_button_tag :select, checked: true %>新しいお届け先<br>
      <%= f.label :郵便番号 %>
      <%= f.text_field :delivery_postal_code %>ハイフンなし<br>
      <%= f.label :住所 %>
      <%= f.text_area :delivery_address %><br>
      <%= f.label :宛名 %>
      <%= f.text_field :delivery_name %><br>

    <%= f.submit "確認画面へ進む" %>
<% end %>

