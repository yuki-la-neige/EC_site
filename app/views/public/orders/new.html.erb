<div class="container-fluid offset-1">
  <h4 class="my-3">購入情報入力</h4>
  <%= form_with(:url => {:controller => "public/orders", :action =>"create"}, local: true) do |f| %>
    <h5 class="font-weight-bold">支払方法</h5>
      <div class="ml-5">
        <%= f.radio_button :payment_option, 0, checked: true %><%= f.label :クレジットカード %><br>
        <%= f.radio_button :payment_option, 1 %><%= f.label :銀行振込 %>
      </div>

    <h5 class="font-weight-bold">お届け先</h5>
      <div class="ml-5">
        <%= f.radio_button(:select, "myaddress", checked: true) %>ご自身の住所<br>
          <div class="ml-3">
            <%= f.label(:select_myaddress, "#{@user.postal_code + @user.address}") %><br>
            <%= f.label(:select_myaddress, "#{@user.family_name + @user.first_name}") %><br>
          </div>
        <%= f.radio_button(:select, "registered_address") %>登録済住所から選択<br>
          <div class="ml-3">
            <%= f.collection_select :address_collection, @addresses, :id, :view_address_detail %><br>
          </div>
        <%= f.radio_button(:select, "new_address") %>新しいお届け先<br>
          <div class="ml-3">
            <%= f.label :郵便番号 %>
            <%= f.text_field :new_postal_code %>ハイフンなし<br>
            <%= f.label :住所, class: "mr-4" %>
            <%= f.text_area :new_delivery_address %><br>
            <%= f.label :宛名, class: "mr-4" %>
            <%= f.text_field :new_delivery_name %><br>
          </div>
      </div>
      <%= f.submit "確認画面へ進む", class: "mx-auto btn btn-primary", style: "display: block;" %>
  <% end %>
</div>