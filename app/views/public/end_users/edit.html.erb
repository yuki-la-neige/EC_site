<h3>登録情報
<%= link_to "退会する", public_end_user_withdrawal_path, class: "btn btn-danger" %>
</h3>

<%= form_with model: @user, url: public_end_user_path do |f| %>
  <table class="table table-bordered">
    <colgroup class="bg-light" style="border-right: double;"></colgroup>
    <colgroup></colgroup>
    <tr>
      <th>氏名</th>
      <td><%= f.text_field :family_name %></td>
      <td><%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <th>カナ</th>
      <td><%= f.text_field :family_name_kana %></td>
      <td><%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= f.text_field :phone %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= f.text_field :email %></td>
    </tr>
  </table>

  <%= f.submit "編集内容を保存する", class: "btn btn-outline-info" %>
<% end %>
