<div class="container-fluid">
  <h3>ジャンル編集画面</h3>
  <%= form_with(model: @genre, :url => {:action => :update}, local: true) do |f| %>
    <%= render "layouts/error", model: f.object %>
    <%= f.label :ジャンル %>
    <%= f.text_field :name %>
    <%= f.radio_button :valid_flag, :true %>有効
    <%= f.radio_button :valid_flag, :false %>無効
    <%= f.submit "変更を保存する", class: "btn btn-info" %>
  <% end %>
</div>