<!DOCTYPE html>
<html>
  <head>
    <title>EcSite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar" style="border-bottom: solid;">
      <h1 class="card nav-brand">LOGO</h1>

      <div class="navbar-left">
        <% if admin_signed_in? %>
          <%= link_to "受注一覧", admin_orders_path %>
          <%= link_to "商品登録", new_admin_item_path %>
          <%= link_to "ログアウト", destroy_admin_session_path %>
        <% elsif end_user_signed_in? %>
          <%= link_to "マイページ", public_end_user_path %>
          <%= link_to "カート一覧", public_end_user_cart_items_path %>
          <%= link_to "ログアウト", destroy_end_user_session_path %>
        <% else %>
          <%= link_to "会員登録",  new_end_user_registration_path %>
          <%= link_to "ログイン", new_end_user_session_path %>
        <% end %>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
